{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "declarationDir": "./dist-types",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
