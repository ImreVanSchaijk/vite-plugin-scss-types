{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node", // Required for resolving modules correctly
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "paths": {
      "helpers/*": ["./src/helpers/*"],
      "types/*": ["./src/types/*"]
    }
  },
  "include": ["src/**/*"]
}
